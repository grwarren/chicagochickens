<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Current Products</h3>
</div>
  <div class="panel-body">

    <% if !@products.empty? %>
        <table class="table table-bordered">
          <tr>
            <th> Product Name</th>
            <th> Unit</th>
          </tr>
          <% @products.each do |product| %>
            <tr>
              <td> <%= product.name  %></td>
              <td> <%= product.unit %></td>
              <td> <%= link_to 'Edit', edit_product_path(product.id)%></td>
              <td> <%= link_to 'Delete',  "/products/#{product.id}", :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>

            </tr>
          <% end %>
        </table>
      <% else %>
        <p>
          No products found.
        </p>
    <% end %>
  </div>
</div>
