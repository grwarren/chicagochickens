.panel.panel-default
  .panel-heading
    %h3.panel-title Order Stuff

  .panel-body
    - if @orders.empty?
      .alert.alert-warning{:role => "alert"}
        %strong No orders for this user
    - else
      = form_for @current_user, html: {class: "nifty_form"} do | f |
        = f.hidden_field :user_id
        = f.hidden_field :name
        =f.fields_for :orders do |o|
          .col-lg-3
            = o.hidden_field :delivery_date
            = o.hidden_field :user_name
            .product
              .row
                .col-sm-4=o.text_field :product_name
                -#.col-sm-4=o.text_field pluralize_units(o.quantity, o.product_name)
                .col-sm-4 available
                .input-group
                  = o.text_field :quantity, class: 'quantity form-control '
                  %span.input-group-btn
                    %a.btn.btn-default.order-minus-btn
                      %span.glyphicon.glyphicon-minus-sign
                    %a.btn.btn-default.order-plus-btn
                      %span.glyphicon.glyphicon-plus-sign



