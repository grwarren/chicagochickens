<h1> Current Orders </h1>

<% if !@orders.empty? %>
  <table>
    <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.product %>
          </td>
          <td>
            <%= order.quantity %>
          </td>
          <td>
            <%= order.user_id %>
          </td>
        </tr>
    <% end %>
</table>

  <% else %>
    <p>
      No Orders found. Please add some orders.
      Thank you!
    </p>
<% end %>
