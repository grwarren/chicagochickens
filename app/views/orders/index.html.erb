<h1> Current Orders </h1>

<% if !@orders.empty? %>
  <table class="table">
    <tr>
      <td>
        Product
      </td>
      <td>
        Quantity
      </td>
      <td>
        User
      </td>
    </tr>
    <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.product.name %>
          </td>
          <td>
            <%= order.quantity %> (<%= order.product.unit %>)
          </td>
          <td>
            <%= order.user.name %>
          </td>
        </tr>
    <% end %>
</table>

  <% else %>
    <p>
      No Orders found. Please add some orders.
      Thank you!
    </p>
<% end %>
