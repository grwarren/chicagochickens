.panel.panel-default
  .panel-heading
    %h3.panel-title= user_orders_headers(@current_user)
  .panel-body
    - if @orders.empty?
      .alert.alert-warning{:role => "alert"}
        %strong No orders for this user
    - else
      .row
        .col-md-4
          %h4 Delivery Date
        .col-md-4
          %h4= @next_delivery_date.strftime("%m-%d-%Y")
      = form_for @current_user do | f |
        = f.text_field :user_id
        = f.text_field :name
        %hr/
        = @current_user.orders.count
        = f.fields_for :orders do |orders_form|
          .row
            .col-md-4
              = orders_form.text_field :delivery_date
            .col-md-4
              = orders_form.fields_for :product do | p|
                = p.text_field :id
                = p.text_field :name
                = p.text_field :unit
            .col-md-4
              = orders_form.text_field :quantity
            -#  -#\#{f.select :quantity, options_for_select(quantity_options_for(order.product),  order.quantity), {}, class: 'form-control'}
        .col-md-4
          = submit_tag "Order", :class => "btn btn-primary"
      %hr/