<div class="alert alert-info" role="alert">
  <h4> Your order will be delivered on:  <%= @next_delivery_date %></h4>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <%=  form_for @order,  html: {class: "form-horizontal"} do |f| %>
      <% @products.each do | product | %>
        <div class="form-group form-inline">
          <%= label_tag :quantity, "#{product.name }  #{units(product)}" , class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
              <%=  f.text_field :quantity, class: "form-control", placeholder: "" %>
          </div>
        </div>
      <% end %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.text_field :delivery_date, :html => {:class =>"moon_form"}, class: "form-control", type: :hidden %>
        <%=  f.submit "Order", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
