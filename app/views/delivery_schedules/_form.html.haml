= form_for @delivery_schedule, :html => {class: 'form-horizontal'} do | f |
  .form-group
    = f.label :date, "Delivery Date", { class: "col-sm-3 control-label"}
    .col-sm-8
      = f.text_field :date, class: "form-control"
  .form-group
    = f.label :pickup_location, "Pickup Location", { class: "col-sm-3 control-label"}
    .col-sm-2
      = f.text_field :pickup_location, class: "form-control"
  %br
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Save", { class: "btn btn-md btn-default"}
