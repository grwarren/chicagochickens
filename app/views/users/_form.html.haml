= form_for @user, html: {class: "form-horizontal"} do |f|
  .form-group
    = label_tag :user_id, "User ID", { class: "col-sm-2 control-label"}
    .col-sm-8
      = f.text_field :user_id, { class: "form-control"}
  .form-group
    = label_tag :name, "Name", { class: "col-sm-2 control-label"}
    .col-sm-8
      = f.text_field :name, { class: "form-control"}
  .form-group
    = label_tag :name, "Password", { class: "col-sm-2 control-label"}
    .col-sm-8
      = f.text_field :password, { class: "form-control"}
  .form-group
    = label_tag :name, "Password Confirmation", { class: "col-sm-2 control-label"}
    .col-sm-8
      = f.text_field :password_confirmation, { class: "form-control"}
  .form-group
    = label_tag :name, "Email", { class: "col-sm-2 control-label"}
    .col-sm-8
      = f.text_field :email, { class: "form-control"}
  .form-group
    = label_tag :name, "Pickup Location", { class: "col-sm-2 control-label"}
    .col-sm-2
      = f.text_field :pickup_location, { class: "form-control"}
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Save", { class: "btn btn-md btn-default"}
