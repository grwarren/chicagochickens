.panel.panel-default
  .panel-heading
    .panel-title.col-md-3 Current Users
    .col-md-offset-10
      = link_to raw("<i class=\"glyphicon glyphicon-plus\"></i> New User"), new_user_path, :class => "btn btn-sm btn-default"
  .panel-body
    - if !@users.empty?
      %table.table.table-bordered
        %tr
          %th.col-md-2 User Id
          %th.col-md-6 Name
          %th
        - @users.each do |user|
          %tr
            %td.col-md-2
              = user.user_id
            %td.col-md-6
              = user.name
            %td
              .btn-group
                = link_to raw("<i class=\"glyphicon glyphicon-edit\"></i> Edit"), edit_user_path(user), :class => "btn btn-sm btn-default"
                = link_to raw("<i class=\"glyphicon glyphicon-wrench\"></i> Orders"), user_orders_url(user.user_id), :class => "btn btn-sm btn-default"
                = link_to raw("<i class=\"glyphicon glyphicon-trash\"></i> Delete"),  user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' } ,  :class => "btn btn-sm btn-default"
    - else
      %p
        No User found.
